<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Kind.
    -->
    <changeSet id="20160218093224" author="jhipster">
        <createTable tableName="kind">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="decription" type="varchar(255)"/>
            <column name="create_date" type="timestamp"/>
            <column name="create_by_id" type="bigint"/>
        </createTable>
        <dropDefaultValue tableName="kind" columnName="create_date" columnDataType="datetime"/>

        
        <createTable tableName="kind_policy">
            <column name="policys_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="kinds_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="kinds_id, policys_id" tableName="kind_policy"/>

        <addForeignKeyConstraint baseColumnNames="kinds_id"
                                 baseTableName="kind_policy"
                                 constraintName="fk_kind_policy_policy_id"
                                 referencedColumnNames="id"
                                 referencedTableName="kind"/>

        <addForeignKeyConstraint baseColumnNames="policys_id"
                                 baseTableName="kind_policy"
                                 constraintName="fk_kind_policy_kind_id"
                                 referencedColumnNames="id"
                                 referencedTableName="policy"/>
        
        <createTable tableName="kind_event">
            <column name="events_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="kinds_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="kinds_id, events_id" tableName="kind_event"/>

        <addForeignKeyConstraint baseColumnNames="kinds_id"
                                 baseTableName="kind_event"
                                 constraintName="fk_kind_event_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="kind"/>

        <addForeignKeyConstraint baseColumnNames="events_id"
                                 baseTableName="kind_event"
                                 constraintName="fk_kind_event_kind_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>
        
        <addForeignKeyConstraint baseColumnNames="create_by_id"
                                 baseTableName="kind"
                                 constraintName="fk_kind_create_by_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
